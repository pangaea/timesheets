<h1 class="page_header">Login</h1>

<fieldset>
  <legend>Login</legend>

  <% form_for @current_session do |f| %>

  <% if @current_session.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @current_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <label for="session_name">Name</label><br />
    <%= f.text_field :username %><br />

    <label for="session_password">Password</label><br />
    <%= f.password_field :password %><br />

    <%= submit_tag "login", :class=>"button inline-left ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" %>

  <% end %>

</fieldset>

